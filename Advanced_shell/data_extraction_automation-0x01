#!/bin/bash

JSON_FILE="data.json"

# Extract fields using jq
name=$(jq -r '.name' "$JSON_FILE")
height=$(jq -r '.height' "$JSON_FILE")
weight=$(jq -r '.weight' "$JSON_FILE")
type=$(jq -r '.types[0].type.name' "$JSON_FILE")

# Convert height (decimeters → meters): 4 → 0.4
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')

# Convert weight (hectograms → kg): 60 → 6
formatted_weight=$(echo "$weight" | awk '{printf "%.0f", $1/10}')

# Capitalize the first letter of the type using sed
type=$(echo "$type" | sed 's/^\(.\)/\U\1/')

# Required EXACT output format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
