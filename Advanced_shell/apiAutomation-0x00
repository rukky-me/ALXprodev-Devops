#!/bin/bash

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# using curl to make the API request
curl -s -o "$OUTPUT_FILE" "$API_URL"

# Checking if the request succeeded
if [ $? -ne 0 ]; then
    echo "Error: Failed to fetch data from the API." >> "$ERROR_FILE"
    exit 1
fi

# this Validate JSON 
if ! jq empty "$OUTPUT_FILE" 2>>"$ERROR_FILE"; then
    echo "Error: Invalid JSON received from API." >> "$ERROR_FILE"
    exit 1
fi

echo "Data saved to $OUTPUT_FILE"
